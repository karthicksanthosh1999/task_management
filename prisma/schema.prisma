generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  mobile   String @unique 
  password String @unique
  company  String

  image String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  works     Work[]
  project   Project[]
}

model Project {
  id        String   @id @default(uuid())
  userId    String
  title     String
  state     Status   @default(Progress)
  startDate DateTime
  endDate   DateTime

  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  works     Work[]
}

model Work {
  id        String   @id @default(uuid())
  userId    String
  title     String
  projectId String
  state     Status   @default(Progress)
  startDate DateTime
  endDate   DateTime

  project   Project  @relation(fields: [projectId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  Pending
  Completed
  Planning
  Progress
}
